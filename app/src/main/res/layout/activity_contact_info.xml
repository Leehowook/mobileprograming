<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_contact_info_graybox_cl"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/activity_contact_info_back_bt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:id="@+id/activity_contact_info_phone_number_tv"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="010-3333-4444"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/activity_contact_info_phonenumber_text_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/activity_contact_info_phonenumber_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_contact_info_delete_bt"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:background="@drawable/button_background_round_corners"
        android:text="삭제"
        android:textColor="@color/bamincolor"

        android:textSize="20dp"
        app:layout_constraintRight_toLeftOf="@id/activity_contact_info_update_bt"
        app:layout_constraintBottom_toBottomOf="@id/activity_contact_info_update_bt"
        android:layout_marginRight="15dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_contact_info_share_bt"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:background="@drawable/button_background_round_corners"
        android:text="공유"
        android:textSize="20dp"
        android:textColor="@color/bamincolor"

        app:layout_constraintRight_toLeftOf="@id/activity_contact_info_delete_bt"
        app:layout_constraintBottom_toBottomOf="@id/activity_contact_info_update_bt"
        android:layout_marginRight="15dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_contact_info_update_bt"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:background="@drawable/button_background_round_corners"
        android:text="편집"
        android:textSize="20dp"
        android:textColor="@color/bamincolor"

        app:layout_constraintRight_toRightOf="@id/activity_contact_info_graybox_cl"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_contact_info_back_bt"
        android:layout_width="45dp"
        android:layout_height="45dp"

        android:background="@drawable/button_background_round_corners"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"

        app:layout_constraintTop_toTopOf="@id/activity_contact_info_name_tv"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@id/activity_contact_info_graybox_cl"/>

    <TextView
        android:id="@+id/activity_contact_info_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조현석"
        android:textColor="@color/bamincolor"
        android:textSize="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>