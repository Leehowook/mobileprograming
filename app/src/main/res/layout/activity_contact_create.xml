<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_contact_create_phonenumber_graybox_cl"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/gray"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_contact_create_name_graybox_cl">

        <TextView
            android:id="@+id/activity_contact_create_phonenumber_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/activity_contact_create_phonenumber_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="전화번호 입력"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="@id/activity_contact_create_phonenumber_tv"
            app:layout_constraintTop_toBottomOf="@id/activity_contact_create_phonenumber_tv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/activity_contact_create_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="연락처 추가"
        android:textColor="@color/bamincolor"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_contact_create_name_graybox_cl"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_contact_create_tv">

        <TextView
            android:id="@+id/activity_contact_create_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/activity_contact_create_name_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="이름 입력"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="@id/activity_contact_create_name_tv"
            app:layout_constraintTop_toBottomOf="@id/activity_contact_create_name_tv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_contact_create_back_bt"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:background="@drawable/button_background_round_corners"
        android:text="취소"
        android:textSize="20dp"
        android:textColor="@color/bamincolor"

        app:layout_constraintRight_toLeftOf="@id/activity_contact_create_save_bt"
        app:layout_constraintBottom_toBottomOf="@id/activity_contact_create_save_bt"
        android:layout_marginRight="15dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_contact_create_save_bt"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:background="@drawable/button_background_round_corners"
        android:text="저장"
        android:textSize="20dp"
        android:textColor="@color/bamincolor"

        app:layout_constraintRight_toRightOf="@+id/activity_contact_create_phonenumber_graybox_cl"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>