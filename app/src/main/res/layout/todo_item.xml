<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_background_round"
    >
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/todo_item_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/todo_item_title_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/todo_item_cb"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="할일 제목"
        />
    <TextView
        android:id="@+id/todo_item_contents_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/todo_item_title_tv"
        app:layout_constraintLeft_toLeftOf="@id/todo_item_title_tv"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="내용"
        />
    <TextView
        android:id="@+id/todo_item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="날짜,시간"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>