<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="match_parent"
    android:background="@drawable/item_background_round"
    android:layout_gravity="center">

        <TextView
            android:id="@+id/contact_item_bookmark_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="☆"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/contact_item_name_tv"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="이름 "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/contact_item_bookmark_tv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/contact_item_phone_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="010-3333-4444"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintRight_toLeftOf="@id/contact_item_call_btn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/contact_item_call_btn"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            app:backgroundTint="@color/bamincolor"
            app:layout_constraintRight_toLeftOf="@id/contact_item_message_btn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="5dp"
            />

        <Button
            android:id="@+id/contact_item_message_btn"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_local_post_office_24"
            app:backgroundTint="@color/bamincolor"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="7dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
